<%= errors_for(f.object) %>

<table summary="Speaker form fields">
  <tr>
    <th>Title</th>
    <td><%= f.text_field(:title) %></td>
  </tr>
  <tr>
    <th>First name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  
  <tr>
    <th>Email</th>
    <td><%= f.text_field(:email) %></td>
  </tr>
  <tr>
    <th>Institution</th>
    <td><%= f.text_field(:institution) %></td>
  </tr>
  <tr>
    <th>Biography</th>
    <td><%= f.text_area(:bio, :rows => 10, :cols => 60) %></td>
  </tr>
  <tr>
    <th>Image</th>
    <td><%= f.file_field(:image) %></td>
  </tr>

</table>
