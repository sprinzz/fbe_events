<%= link_to("<< Back to List", roles_path, :class => 'back-link') %>

<div class="roles delete">
  <h2>Delete Role</h2>

  <%= form_for(@role, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this role?</p>
    <p><%= @role.role %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Role") %>
    </div>

  <% end %>
</div>
