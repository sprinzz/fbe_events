<%= link_to("<< Back to List", hosts_path, :class => 'back-link') %>

<div class="hosts delete">
  <h2>Delete host</h2>

  <%= form_for(@host, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this host?</p>
    <p><%= @host.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete host") %>
    </div>

  <% end %>
</div>
